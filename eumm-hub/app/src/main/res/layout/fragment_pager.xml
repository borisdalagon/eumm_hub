<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEU"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/bloc_image_titre">


                <ImageView
                    android:id="@+id/imgPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:textColor="@color/indicator_unselected"
                    android:src="@drawable/fondbleu8"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/degrade_bleu_up"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/degrade_bleu_douwn"/>

                <!--Titre page 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/li_titre_page_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Que pouvez-vous faire avec"
                        android:textColor="@color/colorBlanche"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="24dp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="260dp"
                            android:layout_height="50dp"
                            android:id="@+id/nomLogo2"
                            android:background="@drawable/titrelogoblanc"
                            android:layout_marginTop="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ?"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlanche"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="28dp"
                            android:textStyle="bold"/>

                    </LinearLayout>


                </LinearLayout>

                <!--Titre page 3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/li_titre_page_3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quels sont les avantages de"
                        android:textColor="@color/colorBlanche"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="24dp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="260dp"
                            android:layout_height="50dp"
                            android:id="@+id/nomLogo3"
                            android:background="@drawable/titrelogoblanc"
                            android:layout_marginTop="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ?"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlanche"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="28dp"
                            android:textStyle="bold"/>

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!--Bloc PAGE 1 : Acceuil-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/li_bloc_page_1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="0dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="15dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/card_logo"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="@color/colorBlancheS"
                        app:cardCornerRadius="11dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/logoeummclient" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nous vous souhaitons la bienvenus sur"
                        android:layout_marginTop="20dp"
                        android:textAlignment="center"
                        android:id="@+id/txt_welcome"
                        android:textColor="@color/colorBlancheTrans1"
                        android:textSize="18dp"
                        android:fontFamily="@font/roboto_light"/>


                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/nomLogo"
                        android:src="@drawable/titrelogoblanc"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgEnd"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_bubble"
                        android:layout_marginTop="20dp" />



                </LinearLayout>


                <!--Bloc PAGE 2 : Utilité de EUMM Client-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/li_bloc_page_2"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_near"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transférer l’argent à une tierce personne"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_near"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transférer l’argent de votre compte vers un autre compte tierce"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_near"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payer les factures  Eau et électricité"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_near"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Faire des réabonnements Canal+"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_near"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payer vos frais de scolarité"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_near"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Et bien d'autres ..."
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                </LinearLayout>


                <!--Bloc PAGE 3 : Avantage de EUMM-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/li_bloc_page_3"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_spa"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Accessible et Rapide quel que soit l’opérateur de téléphonie mobile"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_spa"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transfert d’argent et paiement de factures peu importe l’endroit où l’on se trouve"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_spa"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Facile d'utilisation, adapté, instantané et sécurisé"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_spa"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gain de temps"
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_spa"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Et bien d'autres à découvrir ..."
                            android:textColor="@color/colorBlanche"
                            android:textSize="@dimen/txt_titre"
                            android:fontFamily="@font/roboto_light"
                            android:layout_marginLeft="7dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!--Bloc PAGE 4 : Dernière page-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/li_bloc_page_4"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dd"
                        android:layout_above="@+id/bloc3"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="'' Un seul objectif , Un seul peuple"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorBlancheTrans1"
                                android:textSize="22dp"
                                android:fontFamily="@font/roboto_light_italic"
                                android:layout_marginLeft="7dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Un seul produit ''"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorBlancheTrans1"
                                android:textSize="22dp"
                                android:fontFamily="@font/roboto_light_italic"
                                android:layout_marginLeft="7dp"/>


                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="50dp"
                                android:id="@+id/nomLogo4"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/titrelogoblanc"
                                android:layout_marginTop="20dp" />

                        </LinearLayout>


                    </RelativeLayout>




                    <!--Bloc SIGNATURE-->
                    <LinearLayout
                        android:id="@+id/bloc3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:paddingLeft="11dp"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="By"
                                android:fontFamily="@font/roboto_light"
                                android:textColor="@color/colorBlancheTrans1" />

                            <View
                                android:layout_width="6dp"
                                android:layout_height="4dp" />


                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center_horizontal"
                                android:text="Ufi"
                                android:textColor="@color/colorBlanche"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center_horizontal"
                                android:text="Pay"
                                android:textColor="@color/colorBlanche"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="6dp"
                                android:layout_height="4dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textRotate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/copyright"
                            android:layout_marginLeft="0dp"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="@color/colorBlancheTrans1"
                            />

                    </LinearLayout>


                </RelativeLayout>




            </RelativeLayout>

        </LinearLayout>


</RelativeLayout>