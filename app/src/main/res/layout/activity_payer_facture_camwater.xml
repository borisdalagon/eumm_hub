<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".client.payerfactures.camwater.PayerFactureCamwater">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/colorEU">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/degrade_bleu_up"
            android:id="@+id/h">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/back"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/back"
                    android:layout_centerVertical="true"
                    android:text="Payer facture CAMWATER"
                    android:textSize="@dimen/txt_grand_titre_1"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/colorBlanche"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_logo"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="@color/colorBlancheS"
                    app:cardCornerRadius="4dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/camwater" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CAMWATER Cameroun"
                        android:justificationMode="inter_word"
                        android:textColor="@color/colorBlanche"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="La Cameroon Water Utilities Corporation est une société à capital public, dotée de la personnalité juridique et de l'autonomie financière"
                        android:textColor="@color/colorBlanche"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:textSize="@dimen/txt_normal"/>

                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:theme="@style/AppTheme2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container_camwater">

        </FrameLayout>



    </LinearLayout>


</LinearLayout>