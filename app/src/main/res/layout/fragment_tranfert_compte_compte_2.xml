<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlancheS"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bloc_contenu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_above="@+id/suivant">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contour_3"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_noir"
                    android:layout_margin="3dp"
                    android:layout_alignParentRight="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorNoir"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:text="Transfert Compte à Compte"
                        android:fontFamily="@font/roboto_light" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorNoir"
                        android:text="Cette opération consiste à tranferer de l'argent vers un compte EU Mobile Money"
                        android:fontFamily="@font/roboto_light" />

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:id="@+id/liPhone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="N° de compte"
                        android:textSize="@dimen/txt_small"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/colorNoir" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/numeroCompte"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textSize="@dimen/txt_normal"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorNoir" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/liContact">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/logo"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_centerVertical="true">


                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_circle">

                            <TextView
                                android:id="@+id/lettre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="A"
                                android:textColor="@color/colorBlanche"
                                android:textAllCaps="true"
                                android:textSize="@dimen/txt_titre" />


                        </RelativeLayout>








                    </RelativeLayout>



                    <LinearLayout
                        android:id="@+id/li"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/logo"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nomContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="@color/colorNoir"
                            android:text="Nom du contact"
                            android:textSize="@dimen/txt_normal"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/numeroPhone"
                                android:text="6000000000"
                                android:textSize="@dimen/txt_normal"
                                android:fontFamily="@font/roboto_light"
                                />



                        </LinearLayout>



                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/colorEU"
                        android:textSize="@dimen/txt_titre"
                        android:id="@+id/namePageMontant"
                        android:text="Montant de l'envois"
                        android:textStyle="bold"
                        android:layout_marginTop="0dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:src="@drawable/ic_info_bleu"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XAF"
                        android:id="@+id/codePays"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25.0dp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorEU"
                        android:textSize="@dimen/txt_titre"
                        android:fontFamily="@font/roboto"/>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="@dimen/txt_normal"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:id="@+id/montant"
                        android:layout_toLeftOf="@+id/card_contact"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:keepScreenOn="false"
                            android:keyboardNavigationCluster="false"
                            android:fontFamily="@font/roboto"
                            android:drawableRight="@drawable/ic_invisible"
                            android:hint=""
                            android:textColor="@color/colorNoir"
                            android:textSize="@dimen/txt_titre"
                            android:textStyle="bold"
                            android:inputType="numberDecimal"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="@dimen/txt_normal"
                        android:layout_centerVertical="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


                        <com.ufipay.eummhub.core.classe.CurrencyEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edtMontant"
                            android:hint="Montant"
                            style="@style/AppTheme"
                            android:textSize="@dimen/txt_titre"
                            android:textStyle="bold"
                            android:drawableRight="@drawable/ic_back_left"
                            android:layout_centerVertical="true"
                            android:textColorHint="@color/colorNoir3"/>


                    </com.google.android.material.textfield.TextInputLayout>


                </RelativeLayout>



                <Spinner
                    android:id="@+id/simpleSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:popupBackground="@color/colorBlanche"
                    android:backgroundTint="@color/colorEU"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/li_commentaire"
                    android:visibility="gone"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="@dimen/txt_normal"
                        android:layout_centerVertical="true"
                        android:id="@+id/motif"
                        android:layout_toLeftOf="@+id/card_contact"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edtMotif"
                            android:keepScreenOn="false"
                            android:keyboardNavigationCluster="false"
                            android:fontFamily="@font/roboto_light"
                            android:drawableRight="@drawable/ic_invisible"
                            android:hint="Montant"
                            android:textSize="@dimen/txt_titre"
                            android:textStyle="bold"
                            android:inputType="numberDecimal"/>

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>





        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/suivant"
            android:background="@color/colorNoir3"
            android:fontFamily="@font/roboto_light"
            android:padding="7dp"
            android:layout_margin="20dp"
            android:text="SUIVANT"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:textColor="@color/colorBlancheS"
            android:textSize="@dimen/txt_normal" />



    </RelativeLayout>





</RelativeLayout>